<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/botonBorrar"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:tag="AC"
            android:text="ac"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonInfo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:onClick="mostrarInfo"
            android:text="ans"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonModulo"
            android:tag="%"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="%"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonDividir"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:tag="/"
            android:text="/"
            android:textSize="25sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/numero7"
            android:tag="7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/numero8"
            android:tag="8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/numero9"
            android:tag="9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonMultiplicar"
            android:tag="x"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="x"
            android:textSize="25sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/numero4"
            android:tag="4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:id="@+id/numero5"
            android:tag="5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:id="@+id/numero6"
            android:tag="6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonSumar"
            android:tag="+"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="+"
            android:textSize="25sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/numero1"
            android:tag="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/numero2"
            android:tag="2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:id="@+id/numero3"
            android:tag="3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonRestar"
            android:tag="-"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:text="-"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/numero0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:background="@color/boton"
            android:tag="0"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonPunto"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/boton"
            android:tag="."
            android:text="."
            android:textSize="25sp" />

        <Button
            android:id="@+id/botonResultado"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/botonIgual"
            android:tag="="
            android:text="="
            android:textSize="25sp" />
    </TableRow>
</TableLayout>